<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/context_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_menu_height"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle">

        <Button
            android:id="@+id/c_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerInParent="true"
            android:padding="0dp"
            android:textColor="@color/colorContextMenuText"
            android:textSize="@dimen/context_textsize"
            android:drawableTop="@drawable/ic_list_white_24dp"
            android:text="@string/c_menu_list"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/context_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/contact"/>

            <TextView
                android:id="@+id/name"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="Alice"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#aabaaa"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/pictogram"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warded_person_pictogram"/>

            <Button
                android:id="@+id/room"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warded_person_room"/>

            <Button
                android:id="@+id/contacts"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warded_person_contacts"/>

            <Button
                android:id="@+id/quickmessages"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warded_person_qmessage"/>

            <Button
                android:id="@+id/info"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warded_person_info"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>